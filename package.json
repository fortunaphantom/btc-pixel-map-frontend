    "flowbite": "^2.3.0",
    "flowbite-react": "^0.7.2",
    "konva": "^9.3.0",
    "net": "^1.0.2",
    "next": "^14.0.3",
    "nextjs-toploader": "^1.6.4",
    "react": "18",
    "react-dom": "18",
    "react-easy-crop": "^5.0.2",
    "react-hot-toast": "^2.4.1",
